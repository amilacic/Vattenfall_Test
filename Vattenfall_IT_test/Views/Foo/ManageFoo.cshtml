

<h2>{{PageTitle}}</h2>
<div >
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-12">
                <input type="text" class="col-md-2" placeholder="Name" style="margin-right:10px;" ng-model="Foo.Name" />
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-12">
                <input type="text" class="col-md-2" placeholder="Surename" style="margin-right:10px;" ng-model="Foo.Surename" />
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-12">
                <input type="text" class="col-md-2" placeholder="Age" style="margin-right:10px;" ng-model="Foo.Age" />
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <button class="btn btn-sm btn-success" style="width:auto;" ng-click="SaveFoo()">
                        <i class="glyphicon glyphicon-floppy-saved"></i> Save Foo
                    </button>
                    <a class="btn btn-sm btn-warning" href="#/">
                        <i class="glyphicon glyphicon-ban-circle"></i> Cancel
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>